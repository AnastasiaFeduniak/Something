<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7f3ee">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <Button
            android:layout_width="105dp"
            android:layout_height="25dp"
            android:background="@drawable/shadow2"
            android:text="Повернутися до меню"
            android:textSize="8dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="right"
            android:layout_marginRight="32dp"
            android:id="@+id/returnToMenu"
            android:onClick="ToMenu"></Button>
        <LinearLayout
            android:layout_width="580dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_b"
            android:gravity="center_horizontal"
            android:elevation="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="340dp"
                android:layout_height="200dp"
                android:gravity="bottom"
                android:layout_marginTop="7dp">

                <ImageView
                    android:id="@+id/img"
                    android:layout_marginBottom="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/breadtitle"></ImageView>

                <TextView
                    android:id="@+id/question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="180dp"
                    android:alpha="0.9"
                    android:background="#ffffff"
                    android:fontFamily="@font/titillium_web_light_italic"
                    android:text="@string/Wq1"
                    android:textColor="#00000a"></TextView>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#2b2b2b"
                    android:visibility="gone"
                    android:id="@+id/Res"
                    android:text="magnum opus"></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/ResT"
                    android:text="magnum opus"
                    ></TextView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="@string/Ban1_1"
                    android:background="@drawable/shadow_b1"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/bt1"
                    android:onClick="onClick"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="@string/Ban1_2"
                    android:background="@drawable/shadow_b1"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/bt2"
                    android:onClick="onClick"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="@string/Ban1_3"
                    android:background="@drawable/shadow_b1"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/bt3"
                    android:onClick="onClick"></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="@string/Ban1_4"
                    android:background="@drawable/shadow_b1"
                    android:textSize="10dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/bt4"
                    android:onClick="onClick"></Button>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>